  "screenshots": [
    {
      "src": "/screenshots/desktop.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide",
      "label": "واجهة النظام على سطح المكتب"
    },
    {
      "src": "/screenshots/mobile.png",
      "sizes": "750x1334",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "واجهة النظام على الهاتف"
    }
  ],
  "related_applications": [
    {
      "platform": "play",
      "url": "https://play.google.com/store/apps/details?id=com.alshifaclinic.app",
      "id": "com.alshifaclinic.app"
    },
    {
      "platform": "webapp",
      "url": "https://alshifa-clinic-galgany.vercel.app"
    }
  ],
  "prefer_related_applications": false,
  "scope": "/",
  "id": "/",
  "launch_handler": {
    "client_mode": "auto"
  },
  "handle_links": "preferred",
  "edge_side_panel": {
    "preferred_width": 400
  },
  "protocol_handlers": [
    {
      "protocol": "web+alshifa",
      "url": "/?protocol=%s"
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },
  "file_handlers": [
    {
      "action": "/upload",
      "accept": {
        "image/*": [".jpg", ".jpeg", ".png", ".gif"],
        "application/pdf": [".pdf"],
        "text/plain": [".txt"]
      }
    }
  ],
  "display_override": ["window-controls-overlay", "minimal-ui"],
  "capture_links": "new-client",
  "permissions": [
    "clipboard-write",
    "notifications",
    "geolocation",
    "storage"
  ],
  "background": {
    "service_worker": "service-worker.js",
    "type": "module"
  }
}
